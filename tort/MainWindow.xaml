                    <TextBlock x:Name="textblock3" Grid.Column="2" HorizontalAlignment="Left" Margin="191,187,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <Separator Grid.Column="2" HorizontalAlignment="Left" Margin="191,195,0,0" VerticalAlignment="Top" Height="22" Width="46"/>
                    <TextBlock x:Name="textblock4" Grid.Column="2" HorizontalAlignment="Left" Margin="195,208,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="_4_fel" Header="4.feladat" IsEnabled="False">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="72*"/>
                        <ColumnDefinition Width="527*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Számláló: " HorizontalAlignment="Left" Margin="11,26,0,0" VerticalAlignment="Top" Background="#FF2AB981" Grid.Column="1"/>
                    <Label Content="Nevező: " HorizontalAlignment="Left" Margin="11,78,0,0" VerticalAlignment="Top" Background="#FF2AB981" Grid.Column="1"/>
                    <Separator Grid.Column="2" HorizontalAlignment="Left" Margin="48,61,0,0" VerticalAlignment="Top" Height="22" Width="72"/>
                    <TextBox x:Name="nbekero1" Grid.Column="2" HorizontalAlignment="Left" Margin="48,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" TextChanged="szbekero1_TextChanged"/>
                    <TextBox x:Name="szbekero1" HorizontalAlignment="Left" Margin="48,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Grid.Column="2" TextChanged="szbekero1_TextChanged"/>
