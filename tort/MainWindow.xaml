                    <Separator Grid.Column="2" HorizontalAlignment="Left" Margin="83,194,0,0" VerticalAlignment="Top" Height="22" Width="46"/>
                    <TextBlock x:Name="textblock2" Grid.Column="2" HorizontalAlignment="Left" Margin="83,208,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
