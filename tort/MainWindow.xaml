                    <Separator Grid.Column="2" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top" Height="22" Width="46"/>
                    <Label Grid.Column="2" Content="X" HorizontalAlignment="Left" Margin="75,193,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem HorizontalAlignment="Center" Height="20" Header="6.feladat" VerticalAlignment="Top" Width="72" Margin="0,-1,0,0" IsEnabled="False">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="72*"/>
                        <ColumnDefinition Width="527*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="52,38,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="52,61,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
