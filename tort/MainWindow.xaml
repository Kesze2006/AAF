                    <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="160,40,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="164,61,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
