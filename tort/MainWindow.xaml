                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="14,61,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
                    <Separator Grid.Column="1" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" Height="22" Width="46"/>
                    <Label Grid.Column="2" Content="+" HorizontalAlignment="Left" Margin="0,38,0,0" VerticalAlignment="Top" FontSize="20"/>
                </Grid>
            </TabItem>
            <TabItem HorizontalAlignment="Center" Height="20" Header="7.feladat" VerticalAlignment="Top" Width="74" Margin="0,-1,0,0" IsEnabled="False">
